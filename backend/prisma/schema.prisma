generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id          String   @id @default(uuid())
  email       String   @unique
  username    String   @unique
  password    String
  firstname   String
  lastname    String
  rank        String
  stationId   String
  role        Role     @default(OFFICER)
  createdAt   DateTime @default(now())
  profilepic  String?  @default("https://www.gravatar.com/avatar/0000000000000000000000000000000?d=mp&f=y")
  cases       CaseRecord[]
  scanLogs    ScanLog[]

  sentMessages   Message[]      @relation("SentMessages")
  conversations1 Conversation[] @relation("ParticipantOne")
  conversations2 Conversation[] @relation("ParticipantTwo")
}

enum Role {
  ADMIN
  OFFICER
}

model CaseRecord {
  id            String      @id @default(uuid())
  policeStation String
  ioName        String
  ioId          String
  crimeNumber   String      // e.g., "FIR-2023-001"
  crimeYear     Int
  firDate       DateTime
  seizureDate   DateTime
  actLaw        String
  sectionLaw    String
  status        CaseStatus  @default(PENDING)
  createdAt     DateTime    @default(now())
  
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  properties    Property[]
}

enum CaseStatus {
  PENDING
  DISPOSED
}

model Property {
  id          String    @id @default(uuid())
  category    Category  // e.g., Electronics, Weapon
  belongingTo OwnerType    // Accused/Complainant
  nature      SeizureNature    // Recovered/Seized
  quantity    Int
  location    String    // Rack 1, Room B
  description String
  photoUrl    String?
  
  // This stores the Base64 Data URI of the QR Code image
  qrCodeImage String?   @db.Text // Text type for long Base64 strings
  
  // This is the unique string embedded inside the QR
  qrString    String    @unique 

  status      PropStatus @default(IN_CUSTODY)
  
  caseId      String
  case        CaseRecord      @relation(fields: [caseId], references: [id])
  
  custodyLogs CustodyLog[]
  disposal    Disposal?

  scanLogs    ScanLog[]
}

enum SeizureNature {
  RECOVERED
  SEIZED
  ABANDONED
}

enum OwnerType {
  ACCUSED
  COMPLAINANT
  VICTIM
  UNKNOWN
}

enum Category {
  ELECTRONICS
  WEAPON
  VEHICLE
  CASH
  NARCOTICS
  DOCUMENTS
  OTHER
}

enum PropStatus {
  IN_CUSTODY
  DISPOSED
}

model CustodyLog {
  id         String   @id @default(uuid())
  fromOfficer String
  toOfficer   String
  purpose     String   // Court, FSL, Storage
  remarks     String?
  movedAt     DateTime @default(now())
  
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])
}

model Disposal {
  id            String   @id @default(uuid())
  type          DisposalType   // Auction, Destroyed, Returned
  courtOrderRef String
  disposedAt    DateTime
  remarks       String?
  
  propertyId    String   @unique
  property      Property @relation(fields: [propertyId], references: [id])
}

enum DisposalType {
  AUCTION
  DESTROYED
  RETURNED
  TRANSFERRED
}

model ScanLog {
  id         String   @id @default(uuid())
  scannedAt  DateTime @default(now())
  
  // The person who performed the scan
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  
  // The property that was scanned
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])

  // Optional: Capture metadata like GPS or Device ID
  deviceInfo String?  
}

model Conversation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  participantOneId String
  participantTwoId String

  participantOne User @relation("ParticipantOne", fields: [participantOneId], references: [id])
  participantTwo User @relation("ParticipantTwo", fields: [participantTwoId], references: [id])

  messages Message[]

  conversationKey String? // base64 AES key encrypted for E2E

  // Preview + sorting
  lastMessageAt DateTime?
  lastMessageId String?

  // Unread count
  unreadCountP1 Int @default(0)
  unreadCountP2 Int @default(0)

  @@unique([participantOneId, participantTwoId])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  replyToId String?

  senderId String
  sender   User   @relation("SentMessages", fields: [senderId], references: [id])

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])


  // Read + delete
  isRead        Boolean  @default(false)
  deletedForAll Boolean  @default(false)
  deletedFor    String[] @default([])

  // Indexes
  @@index([conversationId, createdAt])
}